<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorYellow"
        android:text="Android 예제입니다!"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:textSize="10pt"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="01.LinearLayout 예제"
        android:id="@+id/_01_linearlayoutBtn"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="02.Widget 예제"
        android:id="@+id/_02_widgetBtn"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="03.Event 처리 예제"
        android:id="@+id/_03_EventBtn"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="04.Activity Event 처리 예제"
        android:id="@+id/_04_ActivityEventBtn"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="05.Swipe Event 처리 예제"
        android:id="@+id/_05_SwipeEventBtn"/>
</LinearLayout>